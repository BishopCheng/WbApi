        //登陆脚本
        function Login() {
           
            var userName = $("#account").val();
            var passWord = $("#pwd").val();
            var validatecode = $("#validateCode").val();
            if (userName == "") {
                layer.alert("账号不能为空", { icon: 0 });
                //重新聚焦于账户框
                $("#account").focus();
                return;
            }
            if (passWord == "") {
                layer.alert("密码不能为空", { icon: 0 });
                $("#pwd").focus();
                return;
            }
            if (validatecode == "") {
                    layer.alert("验证码不能为空", { icon: 0 });
                    $("#validateCode").focus();
                    return;
            }
            layer.load();
               
                $.ajax({
                    cache: false,
                    type: "POST",
                    url: "/Init/Login",
                    data: [{ name: 'userName', value: userName },
                        { name: 'password', value: passWord },
                        { name: 'validateCode', value: validatecode }
                    ],
                    async: true,
                    error: function (request) {
                        layer.alert(request.responseText, { icon: 2 });
                        layer.alert('链接失败', { icon: 2 });
                     },
                    success: function (data) {
                        if (data.length > 0) {
                            layer.alert(data, { icon: 2 });
                            $("#username").focus();
                        }
                        else {
                            window.location = "/Init/CMSDesk";
                        }
                    },
                    complete: function (XMLHttpRequest, textStatus) {
                        layer.closeAll('loading');

                    }
                });
            }
